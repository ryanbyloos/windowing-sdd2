<project>

    <target name="clean">
        <delete dir="out"/>
        <delete dir="doc"/>
    </target>

    <target name="build">
        <mkdir dir="out"/>
        <javac includeantruntime="false" srcdir="./src" destdir="out">
            <classpath>
            </classpath>
        </javac>
    </target>

    <target name="run" depends="build">
        <java classname="TestWindowing" fork="true" classpath="out"/>
    </target>

    <target name="doc">
        <mkdir dir="doc"/>
        <javadoc destdir="doc">
            <fileset dir="src"/>
        </javadoc>
    </target>

</project>